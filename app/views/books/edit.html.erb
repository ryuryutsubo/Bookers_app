<h2>Editing Book</h2>

<% if @books.errors.any? %>
<div class = "error_explanation">
  <div class = "errors"><%= @books.errors.count %> errors prohibited this book from being saved:</div>
  <% @books.errors.full_messages.each do |message| %>
    <ul class = "message"><%= message %></ul>

  <% end%>
 </div>
<% end %>

<%= form_with model:@books, local:true do |f| %>
<div class="form">
<h4>Title<h4>
<%= f.text_field :title %>
</div>
<div class="form">
<h4>Body<h4>
<%= f.text_area :body %>
</div>
<div class="submit">
<%= f.submit 'Update Book' %>
</div>
<% end %>
<%= link_to "Show", book_path(@books.id) %>
<%= link_to "Back", books_path %>
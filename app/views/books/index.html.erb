<body>
 <font color="green"><%= flash[:notice] %></font>
<h1>Books</h1>
<table>
  <thead>
  <tr>
    <th>Tilte</th>
    <th>Body</th>
  </tr>
  </thead>
  <tbody>
 <% @books.each do |book| %>
    <tr>
     <td>
     <%= book.title %>
     </td>
     <td>
     <%= book.body %>
     </td>
     <td>
      <%= link_to "Show", book_path(book.id) %>
      <%= link_to "Edit", edit_book_path(book.id) %>
      <%= link_to "Destroy", destroy_book_path(book.id), method: :delete, "data-confirm" => "Are you sure?" %>

     </td>
    </tr>
 <% end %>
  </tbody>
  </table>
  </body>


<h2>New book</h2>
<% if @book.errors.any? %>
<div class = "error_explanation">
  <div class = "errors"><%= @book.errors.count %> errors prohibited this book from being saved:</div>
  <% @book.errors.full_messages.each do |message| %>
    <ul class = "message"><%= message %></ul>
</div>
  <% end%>
<% end %>

<%= form_with model: @book, local:true do |f| %>
<div class="form">
<h4>Title<h4>
<%= f.text_field :title %>
</div>
<div class="form">
<h4>Body<h4>
<%= f.text_area :body %>
</div>
<div class="submit">
<%= f.submit 'Create Book' %>
</div>
<% end %>
